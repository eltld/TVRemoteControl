<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <RelativeLayout
        android:id="@+id/set_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mouse_topbg"
        android:padding="10dp" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/mouse_topreturn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@+string/downloadtasklisttitle"
            android:textColor="@color/set_title_text_color"
            android:textSize="20sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView_BindDevices"	
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/set_top"
        android:divider="@drawable/search_dividersmall"
    />

</RelativeLayout>